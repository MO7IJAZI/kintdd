// Prisma schema for KINT (Kafri International) Website
// Database: MariaDB/MySQL

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin") // admin, super_admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// Category Model
model Category {
  id          String    @id @default(cuid())
  name        String
  name_ar     String
  slug        String    @unique
  description String?   @db.Text
  description_ar String? @db.Text
  image       String?
  icon        String?   // Added as per plan
  parentId    String?
  parent      Category? @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: SetNull)
  children    Category[] @relation("CategoryToCategory")
  products    Product[]
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([parentId])
  @@map("categories")
}

// Product Model
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  sku         String?  @unique // Added as per plan
  description String?  @db.Text
  shortDesc   String?  @db.Text
  features    String?  @db.Text
  benefits    String?  @db.Text
  usage       String?  @db.Text
  composition String?  @db.Text
  usageTable  Json?    // Added as per plan (Dosage/Stage)
  compTable   Json?    // Added as per plan (Nutrients)
  tabs        Json?    // Dynamic tabs for product info
  image       String?
  images      ProductImage[]
  downloads   Download[]     // Added as per plan
  sections    ProductSection[] // Dynamic product sections
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  isOrganic   Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  colorTheme  String   @default("blue") // Product color theme
  metaTitle   String?
  metaTitle_ar String?
  metaDesc    String?  @db.Text
  metaDesc_ar String?  @db.Text
  
  // Arabic Content
  name_ar        String?
  description_ar String?  @db.Text
  shortDesc_ar   String?  @db.Text
  features_ar    String?  @db.Text
  benefits_ar    String?  @db.Text
  usage_ar       String?  @db.Text
  composition_ar String?  @db.Text
  usageTable_ar  Json?
  compTable_ar   Json?
  tabs_ar        Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  crops       Crop[]   @relation("CropRecommendedProducts")

  @@index([slug])
  @@index([categoryId])
  @@index([isFeatured])
  @@index([order])
  @@map("products")
}

// Product Images Model
model ProductImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId])
  @@map("product_images")
}

// Download Model (Labels, SDS, Brochures)
model Download {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  type      String   // SDS, Label, Brochure
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId])
  @@map("downloads")
}

// Product Section Model (Dynamic content sections for product pages)
model ProductSection {
  id        String   @id @default(cuid())
  title     String
  title_ar  String?
  content   String   @db.LongText
  content_ar String? @db.LongText
  order     Int      @default(0)
  colorTheme String  @default("blue")
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([order])
  @@map("product_sections")
}

// Catalog Model (PDF catalogs system)
model Catalog {
  id          String   @id @default(cuid())
  title       String
  title_ar    String?
  description String?  @db.Text
  description_ar String? @db.Text
  fileUrl     String
  category    String   // agricultural | animal
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
  @@index([order])
  @@map("catalogs")
}

// Headquarter Model
model Headquarter {
  id          String   @id @default(cuid())
  title       String   @default("Company Headquarter")
  title_ar    String?  @default("مقر الشركة")
  content     String?  @db.Text
  content_ar  String?  @db.Text
  address     String?
  address_ar  String?
  latitude    Float?
  longitude   Float?
  updatedAt   DateTime @updatedAt
  
  @@map("headquarters")
}

// Company Data Model (Registration, VAT, etc.)
model CompanyData {
  id          String   @id @default(cuid())
  companyName String   @default("KINT Kafri International")
  companyName_ar String? @default("KINT Kafri International")
  address     String?  @db.Text
  address_ar  String?  @db.Text
  courtInfo   String?  @db.Text
  courtInfo_ar String? @db.Text
  ncrNumber   String?  @default("0000100441")
  vatNumber   String?  @default("PL 637-011-20-65")
  capital     String?  @default("PLN 177 000")
  capital_ar  String?  @default("PLN 177 000")
  
  updatedAt   DateTime @updatedAt

  @@map("company_data")
}

// Crop Model
model Crop {
  id          String      @id @default(cuid())
  name        String
  name_ar     String?
  slug        String      @unique
  category    String?     // Crop category (e.g., vegetables, fruits, grains)
  category_ar String?     // Category in Arabic
  harvestSeason_ar String?
  image             String?
  pdfUrl            String?
  description       String?     @db.Text
  description_ar    String?     @db.Text
  stages      CropStage[]
  isActive          Boolean     @default(true)
  metaTitle         String?
  metaTitle_ar      String?
  recommendedProducts Product[]  @relation("CropRecommendedProducts")
  createdAt         DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([category])
  @@map("crops")
}

// Crop Stage Model
model CropStage {
  id             String   @id @default(cuid())
  name           String
  name_ar        String?
  description    String?  @db.Text
  description_ar String?  @db.Text
  order          Int      @default(0)
  cropId         String
  crop           Crop     @relation(fields: [cropId], references: [id], onDelete: Cascade)
  recommendation Json?    // Recommended products for this stage
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([cropId])
  @@map("crop_stages")
}

// Blog Post Model
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  title_ar    String?
  slug        String   @unique
  excerpt     String?  @db.Text
  excerpt_ar  String?  @db.Text
  content     String   @db.LongText
  content_ar  String?  @db.LongText
  image       String?
  author      String
  tags        String?  @db.Text // JSON array stored as text
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  metaTitle   String?
  metaTitle_ar String?
  metaDesc    String?  @db.Text
  metaDesc_ar String?  @db.Text
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([isPublished])
  @@index([publishedAt])
  @@map("blog_posts")
}

// Static Page Model
model Page {
  id        String   @id @default(cuid())
  title     String
  title_ar  String?
  slug      String   @unique
  content   String   @db.LongText
  content_ar String? @db.LongText
  template  String   @default("default")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@map("pages")
}

// Contact Form Submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  department String? // Added as per plan
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([isRead])
  @@index([createdAt])
  @@map("contact_submissions")
}

// Settings Model for site-wide configurations
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt

  @@map("settings")
}

// Experts' Forum Article Model
model ExpertArticle {
  id          String   @id @default(cuid())
  title       String
  title_ar    String?
  slug        String   @unique
  excerpt     String?  @db.Text
  excerpt_ar  String?  @db.Text
  content     String   @db.LongText
  content_ar  String?  @db.LongText
  image       String?
  category    String   // arable, fruit, vegetable
  order       Int      @default(0)
  isPublished Boolean  @default(true)
  publishedAt DateTime?
  metaTitle   String?
  metaTitle_ar String?
  metaDesc    String?  @db.Text
  metaDesc_ar String?  @db.Text
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([isPublished])
  @@index([order])
  @@map("expert_articles")
}

// Job Offer Model
model JobOffer {
  id            String   @id @default(cuid())
  title         String
  title_ar      String?
  location      String?
  location_ar   String?
  workType      String?
  workType_ar   String?
  contractType  String?
  contractType_ar String?
  employmentType String?
  employmentType_ar String?
  companyIntro  String?  @db.Text
  companyIntro_ar String? @db.Text
  responsibilities String? @db.Text
  responsibilities_ar String? @db.Text
  benefits      String?  @db.Text
  benefits_ar   String?  @db.Text
  qualifications String? @db.Text
  qualifications_ar String? @db.Text
  isActive      Boolean  @default(true)
  expiresAt     DateTime?
  publishedAt   DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  applications  JobApplication[]

  @@index([isActive])
  @@index([publishedAt])
  @@map("job_offers")
}

// Job Application Model
model JobApplication {
  id            String   @id @default(cuid())
  jobOfferId    String
  jobOffer      JobOffer @relation(fields: [jobOfferId], references: [id], onDelete: Cascade)
  firstName     String
  lastName      String
  email         String
  phone         String?
  address       String?  @db.Text
  linkedIn      String?
  cvUrl         String?  @db.Text
  coverLetter   String?  @db.Text
  status        String   @default("pending") // pending, reviewed, contacted, rejected, hired
  notes         String?  @db.Text
  submittedAt   DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([jobOfferId])
  @@index([status])
  @@index([submittedAt])
  @@map("job_applications")
}

// Certificate Model for Gallery Images
model Certificate {
  id          String   @id @default(cuid())
  title       String
  title_ar    String?
  description String?  @db.Text
  description_ar String? @db.Text
  imageUrl    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
  @@map("certificates")
}

// Award Model for Gallery Images
model Award {
  id          String   @id @default(cuid())
  title       String
  title_ar    String?
  description String?  @db.Text
  description_ar String? @db.Text
  imageUrl    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
  @@index([isActive])
  @@map("awards")
}

// PDF Document Model for managing downloadable files
model Document {
  id          String   @id @default(cuid())
  title       String
  title_ar    String?
  slug        String   @unique
  description String?  @db.Text
  description_ar String? @db.Text
  filePath    String   // Path to the uploaded PDF file
  category    String   // optimum-conditions, mixing-table, etc.
  isActive    Boolean  @default(true)
  downloads   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([isActive])
  @@map("documents")
}

// Animal Types (Livestock)
model AnimalType {
  id             String        @id @default(cuid())
  name           String
  name_ar        String?
  slug           String        @unique
  description    String?       @db.Text
  description_ar String?       @db.Text
  imageUrl       String?
  icon           String?
  order          Int           @default(0)
  isActive       Boolean       @default(true)
  issues         AnimalIssue[]
  tabs           AnimalTypeTab[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([slug])
  @@index([isActive])
  @@index([order])
  @@map("animal_types")
}

// Most Common Issues per Animal Type
model AnimalIssue {
  id             String     @id @default(cuid())
  title          String
  title_ar       String?
  description    String?    @db.Text
  description_ar String?    @db.Text
  order          Int        @default(0)
  isActive       Boolean    @default(true)
  animalTypeId   String
  animalType     AnimalType @relation(fields: [animalTypeId], references: [id], onDelete: Cascade)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@index([animalTypeId])
  @@index([isActive])
  @@index([order])
  @@map("animal_issues")
}

// Tab for an Animal Type
model AnimalTypeTab {
  id             String               @id @default(cuid())
  title          String
  title_ar       String?
  description    String?              @db.Text
  description_ar String?              @db.Text
  order          Int                  @default(0)
  animalTypeId   String
  animalType     AnimalType           @relation(fields: [animalTypeId], references: [id], onDelete: Cascade)
  images         AnimalTypeTabImage[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  @@index([animalTypeId])
  @@index([order])
  @@map("animal_type_tabs")
}

// Image for an Animal Type Tab
model AnimalTypeTabImage {
  id             String        @id @default(cuid())
  imageUrl       String
  title          String?
  title_ar       String?
  description    String?       @db.Text
  description_ar String?       @db.Text
  order          Int           @default(0)
  tabId          String
  tab            AnimalTypeTab @relation(fields: [tabId], references: [id], onDelete: Cascade)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([tabId])
  @@index([order])
  @@map("animal_type_tab_images")
}

